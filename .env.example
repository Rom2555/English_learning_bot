# English Learning Bot - Пример файла окружения
# Скопируйте этот файл в .env и заполните своими значениями

# Токен от BotFather в Telegram
TOKEN=ваш_токен_от_BotFather

# Переменные для деплоя на VPS (используются в deploy.py)
VPS_HOST=ваш_ip_адрес_vps
VPS_PORT=22
VPS_USER=имя_пользователя_ssh
VPS_PASSWORD=ваш_пароль_ssh
# или используйте SSH-ключ вместо пароля:
# VPS_KEY_PATH=/путь/к/вашему/ssh/ключу
VPS_REMOTE_DIR=/root/english_bot
